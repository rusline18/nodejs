<div class="entry">
    <h1>{{header}}</h1>
    {{#if error}}
        <h2>Ошибка!{{error}}</h2>
    {{/if}}
    <div class="body">
        <ul class="people_list">
            <form action="">
                <select name="col" id="news">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                    <option value="20">20</option>
                </select>
            </form>
            <div class="content">
                {{#each tag}}
                <h2>{{this}}</h2>
                {{/each}}
                <p>{{date}}</p>
                <p>{{content}}</p>
            </div>
        </ul>
    </div>
</div>